<Window x:Class="CrawlerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Main, Source={StaticResource Locator} }"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="ConnectButton" Content="Connect to Server" HorizontalAlignment="Left" Margin="39,255,0,0"
                VerticalAlignment="Top" Width="130" Click="Button_Click" Height="39" />
        <Button x:Name="StartCrawlerButton" Content="Start Crawling" HorizontalAlignment="Left" Margin="273,255,0,0"
                VerticalAlignment="Top" Width="128" Height="39" Click="StartCrawlerButton_Click" />

    </Grid>
</Window>